{
    "manifest_version": 3,
    "name": "Question Generator",
    "version": "1.0",
    "description": "Generate high quality questions on the input text.",
    "permissions": [
        "activeTab",
        "sidePanel"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "side_panel": {
        "default_path": "popup.html"
    }
}